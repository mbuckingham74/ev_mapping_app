# EV - Environment Variables

## Postgres Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ea_planner
DB_USER=ea_planner
DB_PASSWORD=your_secure_password_here
DB_SSL=false
# DB_SSL_MODE: 'verify' (default) validates cert against Node's CA store
#              (for private CAs, prefer NODE_EXTRA_CA_CERTS over no-verify)
#              'no-verify' skips cert validation (use only if CA injection isn't possible)
DB_SSL_MODE=verify
# Connection pool settings (tune for your deployment)
DB_POOL_MAX=20
# Timeout for establishing a new connection to the database
DB_POOL_CONNECTION_TIMEOUT_MS=5000
# How long idle connections remain open before being closed
DB_POOL_IDLE_TIMEOUT_MS=30000

## Server
PORT=3001
SESSION_COOKIE_NAME=ea_session
SESSION_TTL_DAYS=30

## Optional POI layers
# Truck stop POIs (CSV). If unset, the server will try common repo/container paths.
# TRUCK_STOPS_CSV_PATH=/path/to/truck-rv_fuel_stations.csv

## Caching (optional)
GEOCODE_CACHE_TTL_DAYS=30
DIRECTIONS_CACHE_TTL_DAYS=7
ROUTE_CACHE_TTL_SECONDS=600

## API Keys (for data fetching)
NREL_API_KEY=your_nrel_api_key
OPENCHARMAP_API_KEY=your_opencharmap_api_key
OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key

## Production Config
CORS_ORIGIN=https://your-domain.com
